# .env.example

# Core API Keys
OPENAI_API_KEY=sk-your-openai-api-key-here
PERPLEXITY_API_KEY=pplx-your-perplexity-api-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_KEY=your-supabase-service-role-key

# Social Media APIs
FACEBOOK_ACCESS_TOKEN=your-facebook-access-token
FACEBOOK_PAGE_ID=your-facebook-page-id
INSTAGRAM_ACCESS_TOKEN=your-instagram-access-token
INSTAGRAM_BUSINESS_ACCOUNT_ID=your-instagram-business-account-id
WHATSAPP_BUSINESS_API_KEY=your-whatsapp-business-api-key
WHATSAPP_BUSINESS_PHONE_NUMBER_ID=your-whatsapp-phone-number-id

# Payment Gateway
WOMPI_PUBLIC_KEY=pub_your-wompi-public-key
WOMPI_PRIVATE_KEY=prv_your-wompi-private-key
WOMPI_WEBHOOK_SECRET=your-wompi-webhook-secret

# Billing/Invoicing
SIIGO_API_KEY=your-siigo-api-key
SIIGO_TENANT_ID=your-siigo-tenant-id

# Logistics
MENSAJEROS_URBANOS_API_KEY=your-mensajeros-urbanos-api-key
MENSAJEROS_URBANOS_CLIENT_ID=your-client-id

# Delivery Platforms
RAPPI_API_KEY=your-rappi-api-key
RAPPI_STORE_ID=your-rappi-store-id

# Google Business
GOOGLE_BUSINESS_API_KEY=your-google-business-api-key
GOOGLE_BUSINESS_ACCOUNT_ID=your-google-business-account-id

# Application Settings
APP_ENV=development
APP_DEBUG=true
APP_PORT=8000
APP_HOST=0.0.0.0

# Database Settings (if using local PostgreSQL in addition to Supabase)
DATABASE_URL=postgresql://user:password@localhost:5432/ghost_kitchen

# Redis Configuration (for caching and queues)
REDIS_URL=redis://localhost:6379

# Logging
LOG_LEVEL=INFO
LOG_FILE_PATH=logs/app.log

# Agent Configuration
AGENT_MAX_ITERATIONS=10
AGENT_TIMEOUT_SECONDS=300
AGENT_TEMPERATURE=0.7

# Budget Limits (in COP)
DAILY_MARKETING_BUDGET=500000
DAILY_INVENTORY_BUDGET=2000000
CAMPAIGN_BOOST_LIMIT=100000

# Colombian Market Specific
COLOMBIA_TAX_RATE=0.19
COLOMBIA_TIMEZONE=America/Bogota
DEFAULT_CURRENCY=COP